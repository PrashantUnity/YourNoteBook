@inject IDialogService DialogService
<MudPaper MinWidth="400px" 
          MaxWidth="800px" 
          Height="180px" 
          Class="pa-5"
          Style="transition: all 0.3s ease; cursor: pointer; transform-origin: center;" >
    <MudStack >
        <MudItem>
            <MudStack Row="true">
                <MudItem>
                    <MudIcon Icon="@Icons.Material.Filled.Folder"></MudIcon>
                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.h6">Shortcut Id : @Model.Id</MudText>
                </MudItem>
            </MudStack>
        </MudItem>
        <MudItem>
            <MudText> Modified At : @Model.Modified</MudText>
        </MudItem>
        <MudItem>
            <MudStack Row="true"> 
                <MudSpacer/>
                <MudItem>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="EditShortCut"/>
                </MudItem>
                <MudItem>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="Delete" />
                </MudItem>
            </MudStack>
        </MudItem>
    </MudStack>
</MudPaper>