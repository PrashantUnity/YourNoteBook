<MudPaper MinWidth="400px" MaxWidth="800px" Height="180px" Class="pa-5" >
    <MudStack >
        <MudItem>
            <MudStack Row="true">
                <MudItem>
                    <MudIcon Icon="@Icons.Material.Filled.Folder"></MudIcon>
                </MudItem>
                <MudItem>
                    <MudText Typo="Typo.h6">Notes Name : @Model.Title</MudText>
                </MudItem>
            </MudStack>
        </MudItem>
        <MudItem>
            <MudText> Created At : @Model.Created.</MudText>
        </MudItem>
        <MudItem>
            <MudStack Row="true"> 
                <MudSpacer/>
                <MudItem>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="EditNote"/>
                </MudItem>
                <MudItem>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="Delete"/>
                </MudItem>
            </MudStack>
        </MudItem>
    </MudStack>
</MudPaper>