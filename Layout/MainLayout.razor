@inherits LayoutComponentBase
@inject InMemoryRepo InMemoryRepo
<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
@inject IDialogService DialogService
<MudLayout>
    <MudAppBar Color="Color.Surface" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="DrawerToggle"/>
        <MudTextField @bind-Value="Search" Label="Search" Variant="Variant.Outlined" Adornment="Adornment.End"
                      AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Secondary"
                      Style="max-width: 400px"/>
        <MudSpacer/>
        @if (CurrentContext.IsAuthenticated)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Folder" Color="Color.Inherit" OnClick="AddNewFolder"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Filled.Sync" OnClick="SyncFromLocalStorage">Sync</MudIconButton>
        }
        <MudIcon Icon="@Icons.Material.Filled.Settings" @onclick="AddFirebaseCode"></MudIcon>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Default">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudPaper Class="pa-2 ma-2" Elevation="0">
            @Body
        </MudPaper>
    </MudMainContent>
</MudLayout> 